<%= turbo_include_tags %>

<main class="md:ml-64 flex flex-col h-screen">
  <%= turbo_frame_tag 'chat_window', class: "flex flex-col flex-1 h-screen" do %>
    <div id="chat_container" class="scroll-smooth snap-end w-full h-screen px-4 lg:px-12 sm:px-6 pb-10 flex-grow overflow-y-auto flex flex-col flex-1">
      <%= render(::TopNavigationComponent.new) %>

      <section class="flex items-center h-full bg-hero-pattern">
        <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
          <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-stone-900 md:text-5xl lg:text-6xl dark:text-white">👋 Welcome back!</h1>
          <p class="mb-8 text-lg font-normal text-stone-500 lg:text-xl sm:px-16 lg:px-48 dark:text-stone-400">Select one of your old chats or create a new one to start working with Slonito 🐘</p>
        </div>
      </section>
    </div>
  <% end %>
</main>
