<div id="show-schema-modal" data-controller="schema-modal markdown" tabindex="-1" aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative p-4 w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow dark:bg-stone-700">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-stone-600">
        <h3 class="text-xl font-semibold text-stone-900 dark:text-white">
          Schema of <%= @chat.name %>
        </h3>
        <button type="button"
          class="text-stone-400 bg-transparent hover:bg-stone-200 hover:text-stone-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-stone-600 dark:hover:text-white"
          data-modal-hide="show-schema-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="p-4 md:p-5 space-y-4">
        <div class="w-full">
          <div data-schema-modal-target="content" data-markdown-target="item" class="overflow-x-auto w-full max-h-full dark:bg-stone-800">```sql
<%= @chat.raw_schema %>
```
          </div>
          <div class="absolute top-24 end-6">
            <button data-action="click->schema-modal#copy" data-schema-modal-target="copyButton"
              class="text-stone-900 dark:text-stone-400 m-0.5 hover:bg-stone-100 dark:bg-stone-800 dark:border-stone-600 dark:hover:bg-stone-700 rounded-lg py-2 px-2.5 inline-flex items-center justify-center bg-white border-stone-200 border">
              <span id="copy-button-default-message" class="inline-flex items-center">
                <svg class="w-3 h-3 me-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                  viewBox="0 0 18 20">
                  <path
                    d="M16 1h-3.278A1.992 1.992 0 0 0 11 0H7a1.993 1.993 0 0 0-1.722 1H2a2 2 0 0 0-2 2v15a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2Zm-3 14H5a1 1 0 0 1 0-2h8a1 1 0 0 1 0 2Zm0-4H5a1 1 0 0 1 0-2h8a1 1 0 1 1 0 2Zm0-5H5a1 1 0 0 1 0-2h2V2h4v2h2a1 1 0 1 1 0 2Z" />
                </svg>
                <span class="text-xs font-semibold">Copy code</span>
              </span>
              <span id="copy-button-success-message" class="hidden inline-flex items-center">
                <svg class="w-3 h-3 text-rose-700 dark:text-rose-400 me-1.5" aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M1 5.917 5.724 10.5 15 1.5" />
                </svg>
                <span class="text-xs font-semibold text-rose-700 dark:text-rose-400">Copied</span>
              </span>
            </button>
          </div>
        </div>
      </div>
      <!-- Modal footer -->
      <div class="flex justify-end items-center p-4 md:p-5 border-t border-stone-200 rounded-b dark:border-stone-600">
        <button data-modal-hide="show-schema-modal" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-stone-900 focus:outline-none bg-white rounded-lg border border-stone-200 hover:bg-stone-100 hover:text-green-700 focus:z-10 focus:ring-4 focus:ring-stone-100 dark:focus:ring-stone-700 dark:bg-stone-800 dark:text-stone-400 dark:border-stone-600 dark:hover:text-white dark:hover:bg-stone-700">Close</button>
      </div>
    </div>
  </div>
</div>
