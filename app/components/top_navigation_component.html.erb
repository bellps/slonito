            </div>
            <div
              class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-stone-100 rounded shadow dark:bg-stone-800 dark:divide-stone-700"
              id="dropdown-user">
              <div class="px-4 py-3" role="none">
                <p class="text-sm text-stone-900 dark:text-white" role="none">
                  Me
                </p>
                <p class="text-sm font-medium text-stone-900 truncate dark:text-stone-300" role="none">
                  <%= helpers.current_user.email %>
                </p>
              </div>
              <ul class="py-1" role="none">
                <li>
                  <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'block', form_class: 'block px-4 py-2 text-sm text-stone-700 hover:bg-stone-100 dark:text-stone-300 dark:hover:bg-stone-700 dark:hover:text-white', role: 'menuitem' %>
