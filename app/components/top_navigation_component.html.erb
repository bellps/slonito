<nav class="flex-row fixed w-full top-0 z-10 flex-shrink-0 flex h-16 bg-white dark:bg-stone-700">

  <button data-drawer-target="sidebar-multi-level-sidebar" data-drawer-toggle="sidebar-multi-level-sidebar"
    type="button"
    class="px-4 text-stone-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-rose-500 md:hidden">
    <span class="sr-only">Open sidebar</span>
    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
      aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
    </svg>
  </button>

  <div class="md:ml-64 flex-1 px-4 flex justify-between">

    <!-- Logo -->
    <div class="flex-1 flex">
      <div class="flex-shrink-0 flex items-center">

        <%= render(::SlonitoLogoComponent.new) %>

        <span class="ml-2 self-center text-xl font-semibold sm:text-2xl whitespace-nowrap dark:text-white">
          Slonito
        </span>
      </div>
    </div>


    <div class="ml-4 flex items-center md:ml-6">
      <!-- Help button -->
      <button type="button"
        class="bg-white dark:bg-stone-700 p-1 rounded-full text-stone-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500 focus:border-rose-500">
        <span class="sr-only">Help</span>

        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
          aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
